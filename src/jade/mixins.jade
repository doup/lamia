mixin meta(data)
    meta(name="generator" content="Lamia "+ config.version)
    
    if data.author
        meta(name="author" content=data.author)

    if data.keywords
        meta(name="keywords" content=data.keywords)
    
    if data.title
        meta(property='og:title' content=data.title)
        meta(property='twitter:title' content=data.title)
        meta(itemprop='name' content=data.title)
        
    if data.excerpt
        meta(name="description" content=data.excerpt)
        meta(property='og:description' content=data.excerpt)
        meta(itemprop='description' content=data.excerpt)
        
    meta(property='og:site_name' content=data.sitename)
    meta(property='og:type' content=data.facebook.type)
    meta(property='og:image' content=data.facebook.img)
    meta(property='og:url' content=data.url)
    meta(property='fb:admins' content=data.facebook.admins)

    meta(property='twitter:site' content=data.twitter.site)
    meta(property='twitter:card' content=data.twitter.card)
    meta(property='twitter:image:src' content=data.twitter.img)
    meta(property='twitter:url' content=data.url)
    meta(property='twitter:description' content=data.excerpt ? data.excerpt : data.snippet)

    meta(itemprop='image' content=data.schema.img)

